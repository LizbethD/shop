<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
            {{successMsg}}
        </div>
    </div>
</div>

{{#each products}}
   <div class="row">
       {{#each this }}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="http://localhost:3000/api/products/imagen/{{this.filename}}" alt="..." class="img-responsive">
                <div class="caption">
                    <h3>{{this.title}}</h3>
                    <p class="description">{{this.descripcion}}</p>
                    <div class="clearfix">
                        <div class="price pull-left">$ {{this.precio}}</div>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Agregar al carrito</a>
                    </div>
                 </div>
            </div> 
        </div>     
       {{/each}}
    </div>
{{/each}}

